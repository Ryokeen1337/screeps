{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
	"noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noResolve": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": false,
  },
  "compileOnSave": false,
  "include": [
	"./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
	"typings",
	"libs",
	"config",
	"**/*.spec.ts"
  ]
}
