{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
	"noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noResolve": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "compileOnSave": false,
  "include": [
    "webpack.config.ts",
    "config/*.ts",
    "libs/*.ts",
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
